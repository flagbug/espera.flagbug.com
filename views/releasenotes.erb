  </head>
  
  <body>
    <div class="container">
      <header>
        <h1>Espera</h1>
        <nav>
          <ul>
            <li><a href="/">overview</a></li>
            <li class="selected"><a href="/release-notes">release notes</a></li>
            <li><a href="about">about</a></li>
          </ul>
        </nav>
      </header>
      <section class="release-notes">
        <ul>
          <% for release in @releases %>
          <li>
            <div class="version"><%= release.version %></div>
            <ul>                          
              <% release.entries.each do |entry| %>
              <li>
                <div class="<%= entry.type %>"><%= entry.type.upcase + ":" %></div>
                <span><%= entry.description %></span>
              </li>
              <% end %>
            </ul>
          </li>
          <% end %>
        </ul>
      </section>
    </div>
  </body>
</html>